<div>
  <h2>回答更新画面</h2>
  <%= form_with model:[@question, @answer], local: true do |f| %>
    <div class="form_group">
      <div class="form_group">
        <label>Name</label>
        <%= f.text_field :name, class: "form-control"%>
      </div>
      
      <div class="form_group">
        <label>Content</label>
        <%= f.text_field :content, class: "form-control"%>
      </div>
      
      <div class="text-center">
        <%= f.submit "更新", class: "btn btn-primary"%>
      </div>
    </div>
  <% end %>
</div>